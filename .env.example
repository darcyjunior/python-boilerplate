# Configurações Básicas
DEBUG=True
ENVIRONMENT=development
APP_NAME="Boilerplate Python"
VERSION=0.1.0
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=["*"]

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///./sql_app.db
TEST_DATABASE_URL=sqlite:///./test.db

# Configurações de Segurança
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 dias
ALGORITHM=HS256

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Configurações de Cache
CACHE_TTL=300  # 5 minutos

# Configurações de Timezone
TIMEZONE=America/Sao_Paulo  # Timezone padrão da aplicação (GMT-3)

# Configurações de E-mail (opcional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# Configurações de Armazenamento (opcional)
STORAGE_BACKEND=local
STORAGE_BUCKET=your-bucket-name
STORAGE_PREFIX=uploads/